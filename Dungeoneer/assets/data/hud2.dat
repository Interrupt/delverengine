{
    "class": "com.interrupt.dungeoneer.ui.layout.Layout",
    "children": [
        {
            "class": "com.interrupt.dungeoneer.ui.layout.Prefab",
            "anchor": "BOTTOM_LEFT",
            "x": 8,
            "y": 8,
            "name": "healthBar"
        },
        {
            "class": "com.interrupt.dungeoneer.ui.layout.PlayerHotbar",
            "anchor": "TOP_CENTER",
            "image": "ui/hud_slot.png"
        },
        {
            "class": "com.interrupt.dungeoneer.ui.layout.Prefab",
            "anchor": "TOP_CENTER",
            "y": -48,
            "name": "inventory",
            "visible": {
                "class": "com.interrupt.dungeoneer.ui.values.MenuMode",
                "mode": "Inventory"
            }
        },
        {
            "class": "com.interrupt.dungeoneer.ui.layout.Prefab",
            "anchor": "TOP_CENTER",
            "y": -48,
            "name": "characterSheet",
            "visible": {
                "class": "com.interrupt.dungeoneer.ui.values.MenuMode",
                "mode": "Character"
            }
        },
        {
            "class": "com.interrupt.dungeoneer.ui.layout.Group",
            "anchor": "CENTER",
            "visible": {
                "class": "com.interrupt.dungeoneer.ui.values.MenuMode",
                "mode": "Hidden"
            },
            "children": [
                {
                    "class": "com.interrupt.dungeoneer.ui.layout.Crosshair",
                    "anchor": "CENTER",
                    "color": { "r":  1, "g": 1, "b": 1, "a":  0.35 }
                }
            ]
        },
        {
            "class": "com.interrupt.dungeoneer.ui.layout.PlayerStatusEffects",
            "anchor": "TOP_LEFT",
            "pivot": "TOP_LEFT",
            "x": 10,
            "y": -10
        },
        {
            "class": "com.interrupt.dungeoneer.ui.layout.Group",
            "anchor": "CENTER",
            "children": [
                {
                    "class": "com.interrupt.dungeoneer.ui.layout.DynamicFormatText",
                    "anchor": "CENTER",
                    "y": 20,
                    "frequency": 5,
                    "pattern": "{0}",
                    "args": [
                        {
                            "class": "com.interrupt.dungeoneer.ui.values.GameMessage",
                            "field": "getMessage()"
                        }
                    ]
                },
                {
                    "class": "com.interrupt.dungeoneer.ui.layout.DynamicFormatText",
                    "anchor": "CENTER",
                    "y": -10,
                    "frequency": 5,
                    "pattern": "{0}",
                    "args": [
                        {
                            "class": "com.interrupt.dungeoneer.ui.values.Player",
                            "field": "lookedAtInfo.getPrompt()"
                        }
                    ]
                },
                {
                    "class": "com.interrupt.dungeoneer.ui.layout.DynamicFormatText",
                    "anchor": "CENTER",
                    "y": -30,
                    "frequency": 5,
                    "pattern": "{0}",
                    "args": [
                        {
                            "class": "com.interrupt.dungeoneer.ui.values.Player",
                            "field": "lookedAtInfo.getAdditionalInfo()"
                        }
                    ]
                }
            ]
        }
    ]
}
