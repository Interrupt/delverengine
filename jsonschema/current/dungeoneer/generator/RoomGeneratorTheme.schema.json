{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Room Generator Theme",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "class": {
            "const": "com.interrupt.dungeoneer.generator.rooms.themes.RoomGeneratorTheme",
            "description": "Fully-qualified Java class name."
        },
        "adjustHeights": {},
        "columnBrokenMaterial": {},
        "columnMaterial": {},
        "defaultCeilingMaterial": {},
        "defaultFloorMaterial": {},
        "defaultHallwayFloorMaterial": {},
        "defaultHallwayWallMaterial": {},
        "defaultMaterial": {},
        "hallwayType": {},
        "lakes": {
            "type": "array",
            "description": "Array of valid lake types to generate.",
            "items": {
                "type": "string",
                "enum": ["WATER", "LAVA", "PIT"]
            }
        },
        "mainRooms": {
            "type": "array",
            "description": "Array of room types to generate. Rooms are chosen randomly from the list. Use a type multiple times to control the spawn probability.",
            "items": {
                "type": "string"
            }
        },
        "prefabs": {},
        "rooms": {
            "type": "object",
            "description": "Dictionary providing a mapping of Rooms to mainRooms names.",
            "patternProperties": {
                ".*": {
                    "$ref": "RoomTheme.schema.json"
                }
            }
        },
        "secretDoors": {
            "type": "array",
            "description": "Array of secret Doors.",
            "items": {
                "$ref": "../entities/Door.schema.json"
            }
        }
    }
}
