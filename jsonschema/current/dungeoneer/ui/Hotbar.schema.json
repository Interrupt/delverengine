{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Hotbar",
    "type": "object",
    "properties": {
        "class": {
            "const": "com.interrupt.dungeoneer.ui.Hotbar",
            "description": "Fully-qualified Java class name."
        },
        "columns": {
            "type": "integer",
            "description": "The column count."
        },
        "rows": {
            "type": "integer",
            "description": "The row count."
        },
        "invOffset": {
            "type": "integer",
            "description": "The offset used to give the N first slots to a different hotbar (quickslots)."
        }
    },
    "required": ["class"]
}
